{% extends "base.html.twig" %}

{% block title %}{{ recipe.title ?: 'Recipe' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">{{ recipe.title }}</h2>
                    <div class="text-end">
                        {% if recipe.private %}
                            <span class="badge bg-danger">Private</span>
                        {% else %}
                            <span class="badge bg-success">Public</span>
                        {% endif %}
                        <div>
                            <small class="text-muted ms-2">
                                Created: {{ recipe.createdAt ? recipe.createdAt|date('F j, Y, g:i A') : 'Unknown' }}
                            </small>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    {% if recipe.content %}
                        <div class="mb-3" style="white-space: pre-wrap;">
                            {{ recipe.content }}
                        </div>
                    {% else %}
                        <p class="text-muted">No content available.</p>
                    {% endif %}
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <div>
                        <a href="{{ path('recipe_index') }}" class="btn btn-outline-secondary btn-sm">‚Üê Back to list</a>
                        <a href="{{ path('recipe_edit', { id: recipe.id }) }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="{{ path('recipe_delete', { id: recipe.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                    <small class="text-muted">ID: {{ recipe.id }}</small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}